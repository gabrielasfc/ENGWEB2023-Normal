extends layout

block content
    header.w3-container.w3-green
      h1 Planta #{p["Número de Registo"]}
    
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b ID: ] #{p._id}
            li #[b Número de Registo: ] #{p["Número de Registo"]}
            li #[b Código de Rua: ] #{p["Código de rua"]}
            li #[b Rua: ] #{p.Rua}
            li #[b Local: ] #{p.Local}
            li #[b Freguesia: ] #{p.Freguesia}
            li #[b Espécie: ] #{p.Espécie}
            li #[b Nome Científico: ] #{p["Nome Científico"]}
            li #[b Origem: ] #{p.Origem}
            li #[b Data de Plantação: ] #{p["Data de Plantação"]}
            li #[b Estado: ] #{p.Estado}
            li #[b Caldeira: ] #{p.Caldeira}
            li #[b Tutor: ] #{p.Tutor}
            li #[b Implantação: ] #{p.Implantação}
            li #[b Gestor: ] #{p.Gestor}
            li #[b Data de Atualização: ] #{p["Data de actualização"]}
            li #[b Número de Intervenções: ] #{p["Número de intervenções"]}
    
    footer.w3-container.w3-green
      address Generated by EngWeb in #{d} - #[a(href="/") Voltar]