extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1 Distribuição Arbórea
      
    .w3-container
      table.w3-table-all
        tr
          th ID
          th Freguesia
          th Espécie
          th Estado
          th Número de Intervenções

        each p in plantaslist
          tr
            td
              a(href="/" + p._id) #{p._id}
            td= p.Freguesia
            td 
              a(href="/especies/" + p.Espécie) #{p.Espécie}
            td= p.Estado
            td= p["Número de intervenções"]

    footer.w3-container.w3-green
      h5 Generated by EngWeb in #{d}